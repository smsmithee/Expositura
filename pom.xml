  <developers>
    <developer>
      <name>Sean Smith</name>
      <email>smsmithee@gmail.com</email>
      <url>https://github.com/smsmithee/Expositura</url>
    </developer>
  </developers>
  
  <properties>
    <java.version>21</java.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

    <aws.java.sdk.version>2.35.7</aws.java.sdk.version>
    
    <!-- As of Spring Boot 3.5.5 the default Elasticsearch client is still 8.17.6, remove when no longer needed -->
    <elasticsearch-client.version>9.1.3</elasticsearch-client.version>
  </properties>

  <modules>
    <module>schema2model-maven-plugin</module>
    <module>intake-connectors</module>
    <module>patient-data-model</module>
  </modules>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>io.opentelemetry.instrumentation</groupId>
        <artifactId>opentelemetry-instrumentation-bom</artifactId>
        <version>2.21.0</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>
  
  <dependencies>
    <!-- Elastic -->
    <dependency>
      <groupId>co.elastic.clients</groupId>
      <artifactId>elasticsearch-java</artifactId>
    </dependency>
    
    <!-- Spring Boot -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-log4j2</artifactId>
    </dependency>
  </dependencies>

